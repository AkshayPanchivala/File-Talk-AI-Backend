# ===================================
# File Talk AI - Environment Configuration
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# Required Configuration
# ===================================
# Get your GROQ API key from: https://console.groq.com/
groqApiKey=your_groq_api_key_here

# ===================================
# AI Model Configuration (Optional)
# ===================================
# GROQ model to use for AI operations
GROQ_MODEL_ID=llama-3.3-70b-versatile

# AI model temperature (0.0 - 1.0, lower = more deterministic)
AI_TEMPERATURE=0.7

# Maximum tokens for AI responses
AI_MAX_TOKENS=8000

# ===================================
# PDF Processing Configuration (Optional)
# ===================================
# Timeout for downloading PDFs (in seconds)
PDF_DOWNLOAD_TIMEOUT=30

# Maximum number of pages to process
PDF_MAX_PAGES=100

# Default page range for processing
PDF_DEFAULT_MIN_PAGE=1
PDF_DEFAULT_MAX_PAGE=5

# Local storage path for PDFs
PDF_STORAGE_PATH=media/pdfs

# ===================================
# Summary Configuration (Optional)
# ===================================
# Minimum words for summary generation
SUMMARY_MIN_WORDS=8000

# ===================================
# Question Generation Configuration (Optional)
# ===================================
# Number of questions to generate from document
QUESTIONS_COUNT=20

# ===================================
# Cache Configuration (Optional)
# ===================================
# Enable/disable caching
CACHE_ENABLED=False

# Cache time-to-live in seconds
CACHE_TTL=3600

# Redis URL for caching (if CACHE_ENABLED=True)
# REDIS_URL=redis://localhost:6379/0

# ===================================
# Storage Configuration (Optional)
# ===================================
# Storage backend: 'local' or 's3'
STORAGE_BACKEND=local

# AWS S3 Configuration (if STORAGE_BACKEND=s3)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# ===================================
# Logging Configuration (Optional)
# ===================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: 'json' or 'text'
LOG_FORMAT=json

# ===================================
# Feature Flags (Optional)
# ===================================
# Enable rate limiting for API endpoints
ENABLE_RATE_LIMITING=False

# Enable monitoring and metrics
ENABLE_MONITORING=False

# ===================================
# Environment Configuration (Optional)
# ===================================
# Environment: development, testing, production
ENVIRONMENT=development

# Debug mode (set to False in production!)
DEBUG=True
